= form_for @period, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= t('model.period.title')

    %div.control-group
      = f.label :name, :class => 'control-label'
      %div.controls">
        = f.text_field :name, :class => 'text_field'

    %div.form-actions">
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t("form.button.cancel"), periods_path, :class => 'btn'
