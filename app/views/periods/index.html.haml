%h1= t('page.periods.title')

= render 'actions'

%table.table.table-bordered.table-condensed.table-striped
  %thead
    %tr
      %th= t('table.title.name')
      %th= t('table.title.notes')
      %th{ :colspan => 2 }
  %tbody
    - @periods.each do |item|
      %tr
        %td= item.name
        %td= item.notes.count
        %td
          = link_to t('link.edit'), edit_period_path(item), :class => 'btn btn-default btn-xs'
        %td
          - if item.deletable?
            = link_to t('link.delete'), item, method: :delete, data: { confirm: t('link.destroy.confirm') }, :class => 'btn btn-xs btn-danger'

= render 'actions'
