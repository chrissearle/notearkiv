- title t('page.user.title'), false

.container
  .row
    .col-md-6
      %h2= t('page.user.title')

      = form_for @user, :url => {:controller => 'admin_users', :action => 'create'} do |f|
        = render 'form', :user => @user, :f => f

        .well
          = f.submit t('button.update'), :class => 'btn btn-primary btn-xs'
          = link_to t('button.cancel'), url_for( :controller => 'admin_users', :action => 'index'), :class => 'btn btn-default btn-xs'
