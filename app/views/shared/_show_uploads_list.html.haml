%ul.list-unstyled
  - uploads.each do |upload|
    %li
      = media_link upload ,true
      - if permitted_to?(:edit, upload)
        = link_to t('link.edit'), edit_upload_path(upload), :class => 'btn btn-default btn-xs'
      - if permitted_to?(:destroy, upload)
        = link_to t('link.delete'), upload_path(upload), :method => 'delete', :confirm => t('link.destroy.confirm'), :class => 'btn btn-xs btn-danger', :rel => 'popover', :data => { :container => 'body', :toggle => 'popover', :title => t('link.delete'), :content => t('delete.refresh.warning'), :trigger => 'hover', :placement => 'right', :html => 'true' }
