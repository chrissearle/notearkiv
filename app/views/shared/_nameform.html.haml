%h1= title

= form_for(item) do |f|
  - if item.errors.any?
    #error_explanation
      %h2= "#{pluralize(item.errors.count, 'error')} prohibited this from being saved:"

      %ul
        - item.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name
    = f.text_field :name, :class => 'form-control'

  .well
    = f.submit :class => 'btn btn-primary'
    = link_to t('link.back'), polymorphic_url(item.class), :class => 'btn btn-default'
