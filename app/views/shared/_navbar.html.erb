<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">OCHS</a>

      <div class="nav-collapse">
        <ul class="nav">
          <% if current_user %>
              <% if permitted_to? :index, :notes %>
                  <li><%= link_to t('model.note.list.title'), notes_path %></li>
              <% end %>
              <% if permitted_to? :index, :evensongs %>
                  <li><%= link_to t('model.evensong.list.title'), evensongs_path %></li>
              <% end %>
          <% end %>
        </ul>
        <% if current_user %>
            <%= form_tag(search_path, :method => 'get', :class => 'navbar-search pull-left') do %>
                <%= text_field_tag "search", params[:search], :class => 'search-query', :placeholder => 'Search' %>
            <% end %>
        <% end %>
        <ul class="nav pull-right">
          <% if current_user %>
              <li class="divider-vertical"></li>
              <li class="dropdown">
                <a href="#"
                   class="dropdown-toggle"
                   data-toggle="dropdown">
                  <i class="icon-tags icon-white"></i>
                  <%= t('menu.dropdown.admin') %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% if permitted_to? :index, :composers %>
                      <li><%= link_to t('model.composer.list.title'), composers_path %></li>
                  <% end %>
                  <% if permitted_to? :index, :genres %>
                      <li><%= link_to t('model.genre.list.title'), genres_path %></li>
                  <% end %>
                  <% if permitted_to? :index, :periods %>
                      <li><%= link_to t('model.period.list.title'), periods_path %></li>
                  <% end %>
                  <% if permitted_to? :index, :languages %>
                      <li><%= link_to t('model.language.list.title'), languages_path %></li>
                  <% end %>
                </ul>
              </li>
              <li class="divider-vertical"></li>
              <li class="dropdown">
                <a href="#"
                   class="dropdown-toggle"
                   data-toggle="dropdown">
                  <i class="icon-user icon-white"></i>
                  <%= t('menu.dropdown.account') %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% if permitted_to? :index, :account %>
                      <li><%= link_to t('account.list.title'), url_for(:controller => 'account', :action => 'index') %></li>
                  <% end %>
                  <% if permitted_to? :index, :users %>
                      <li><%= link_to 'Brukere', users_path %></li>
                  <% end %>
                </ul>
              </li>
              <li class="divider-vertical"></li>
              <li class="dropdown">
                <a href="#"
                   class="dropdown-toggle"
                   data-toggle="dropdown">
                  <%= t('menu.language.current') %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('menu.language.norwegian'), url_for(params.merge(:locale => 'nb')) %></li>
                  <li><%= link_to t('menu.language.english'), url_for(params.merge(:locale => 'en'))  %></li>
                </ul>
              </li>
              <li class="divider-vertical"></li>
              <li><%= link_to t('menu.logout'), logout_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>