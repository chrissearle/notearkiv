- if messages.size > 0
  .container
    .row
      - messages.each do |message|
        .alert{ :data => { :id => (message.id ? message.id : nil) }, :class => "alert-#{bootstrap_type(message.msgtype.to_sym)} #{message.id ? 'alert-dismissable' : ''}" }
          - if message.id
            %button.close{ :type => 'button', :'data-dismiss' => 'alert', :'aria-hidden' => 'true' } &times;
          %p= markdown message.content