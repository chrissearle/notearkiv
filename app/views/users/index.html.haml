%h1
  Brukere

- if permitted_to? :new, :users
  %div.well
    = link_to t('list.button.new'), new_user_path, :class => 'btn btn-primary'

%table.table.table-striped.table-condensed
  %thead
    %tr
      %th
        Username
      %th
        Name
      %th
        E-mail
      %th
        Updated
      %th
        Login Count
      %th
        Failed Login Count
      %th
        Last Request
      %th
        Current Login
      %th
        Current Login IP
      %th
        Roles
  %tbody
    - for user in @users
      %tr
        %td= link_to user.username, user_path(user)
        %td= user.name
        %td= user.email
        %td= user.updated_at
        %td= user.login_count
        %td= user.failed_login_count
        %td= user.last_request_at
        %td= user.current_login_at
        %td= user.current_login_ip
        %td
          %ul.unstyled
            - user.roles.each do |role|
              %li= role.name
