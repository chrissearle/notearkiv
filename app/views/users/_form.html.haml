= simple_form_for user, :html => {:class => 'form-horizontal'} do |f|
  %fieldset
    %legend= t('user.form.legend')

    - if full
      = f.input :username
    = f.input :name
    = f.input :email
    - if full
      = f.input :password
      = f.input :password_confirmation

    = f.association :roles, as: :check_boxes

    %div.form-actions
      = f.button :submit, :class => 'btn-primary'
