- title t('page.search.title')

.well
  .btn-group
    - if params[:search]
      = clear_button params[:search], ''
    - if params[:composer]
      = clear_button params[:composer], ''
    - if params[:genre]
      = clear_button params[:genre], ''
    - if params[:period]
      = clear_button params[:period], ''
    - if params[:language]
      = clear_button params[:language], ''

- unless @search[:notes].blank?
  .panel.panel-default
    .panel-body
      .row
        .col-md-9
          .page-header
            %h2
              = t('page.notes.title')
              %small= link_to t('link.filter'), typedsearch_path(request.GET.merge(:type => 'note'))
          = render 'notes/table', :notes => Note.preloaded.where(id: @search[:notes].records.ids)
        .col-md-3
          = render 'shared/facet', :aggregations => @search[:notes].response['aggregations']

