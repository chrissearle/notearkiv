%h2= t('page.dropbox.account')

%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= t('table.title.name')
      %th= t('table.title.value')
  %tbody
    %tr
      %td= t('table.dropbox.referral')
      %td= account['referral_link']
    %tr
      %td= t('table.dropbox.uid')
      %td= account['uid']
    %tr
      %td= t('table.dropbox.country')
      %td= account['country']
    %tr
      %td= t('table.dropbox.quota')
      %td
        %dl.dl-horizontal
          %dt= t('table.dropbox.quotashared')
          %dd= number_to_human_size account['quota_info']['shared'].to_f
          %dt= t('table.dropbox.quotanormal')
          %dd= number_to_human_size account['quota_info']['normal'].to_f
          %dt= t('table.dropbox.quotaquota')
          %dd= number_to_human_size account['quota_info']['quota'].to_f

