%h2= t('dropbox.files.list.title')

- if @timestamp
  %p
    = t('dropbox.files.updated.at')
    = @timestamp

%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= t('dropbox.file.name')
      %th= t('dropbox.file.size')
      %th= t('dropbox.file.modified')
      - if @files.size == 1
        %th= t('dropbox.file.media')
      %th= t('dropbox.file.link')
  %tbody
    - @files.each do |file|
      %tr
        %td= link_to file['path'], url_for(params.merge(:path => file['path']))
        %td= number_to_human_size file['bytes'].to_f
        %td= file['modified']
        - if @files.size == 1
          %td= link_to file['path'], file['media_link']
        %td= upload_back_link(file['path'])

- if @uploads.size > 0
  %h3= t('uploads.with.broken.dropbox.link')

  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th= t('upload.title')
        %th= t('upload.path')
        %th= t('upload.link.object')
        %th= t('list.actions.title')
    %tbody
      - @uploads.each do |upload|
        %tr
          %td= upload.title
          %td= upload.path
          %td= upload_back_link(upload.path)
          %td
            - if permitted_to?(:link, :uploads)
              - if !upload.note.nil?
                = link_to t('dropbox.button.relink'), link_uploads_path(:note => upload.note.id, :upload => upload.id), :class => 'btn btn-mini', :rel => 'popover', :data => { :title => t('link.file.title'), :content => t('refresh.warning'), :trigger => 'hover' }
              - if !upload.evensong.nil?
                = link_to t('dropbox.button.relink'), link_uploads_path(:evensong => upload.evensong.id, :upload => upload.id), :class => 'btn btn-mini', :rel => 'popover', :data => { :title => t('link.file.title'), :content => t('refresh.warning'), :trigger => 'hover' }
            - if permitted_to?(:destroy, upload)
              = link_to t('show.button.delete'), upload_path(upload), :method => 'delete', :confirm => t('show.delete.confirm'), :class => 'btn btn-mini btn-danger', :rel => 'popover', :data => { :title => t('link.file.delete.title'), :content => t('delete.refresh.warning'), :trigger => 'hover' }



