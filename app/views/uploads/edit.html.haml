- title upload_title('page.upload.title', @upload)

.container
  .row
    .col-md-3

    .col-md-6
      = form_for @upload, :html => {:multipart => true} do |f|
        = render 'shared/validation_messages', :errors => @upload.errors

        .form-group
          = f.label :title, :class => 'control-label'
          = f.text_field :title, :class => 'form-control'

        .form-group
          = f.label :path, :class => 'control-label'
          = f.text_field :path, :class => 'form-control', :disabled => 'disabled'

        .well
          = f.submit :class => 'btn btn-primary'
          = link_to t('link.cancel'), :back, :class => 'btn btn-default'

    .col-md-3

