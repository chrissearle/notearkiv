- title upload_title('page.upload.title', @upload)

.container
  .row
    .col-md-3

    .col-md-6
      = form_for @upload, :html => {:multipart => true} do |f|
        = render 'shared/validation_messages', :errors => @upload.errors

        - if @upload.note
          = f.hidden_field :note_id, :value => @upload.note.id

        - if @upload.evensong
          = f.hidden_field :evensong_id, :value => @upload.evensong.id

        .form-group
          = f.label :title, :class => 'control-label'
          = f.text_field :title, :class => 'form-control'

        .form-group
          = f.label :uploadfile, :class => 'control-label'
          = f.file_field :uploadfile, :class => 'form-control'

        .well
          = f.submit :class => 'btn btn-primary'
          = link_to t('link.cancel'), :back, :class => 'btn btn-default'

    .col-md-3


