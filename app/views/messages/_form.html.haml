= simple_form_for message, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= legend

    = f.input :title
    = f.input :content, :input_html => { :rows => 5 }
    = f.input :startdt_text
    = f.input :enddt_text
    = f.input :active_flag
    = f.input :msgtype, :collection => %w(info warning error)

    %div.form-actions
      = f.button :submit, :class => 'btn-primary'
      = link_to t("form.button.cancel"), :back, :class => 'btn'
