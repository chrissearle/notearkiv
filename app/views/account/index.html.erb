<h1><%= @user.display_name %></h1>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th><%= t('account.list.username.title') %></th>
    <th><%= t('account.list.email.title') %></th>
    <th><%= t('account.list.last.title') %></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @user.username %></td>
    <td><%= @user.email %></td>
    <td><%= @user.current_login_at %></td>
  </tr>
  </tbody>
</table>

<% if permitted_to? :edit, @user, :context => :account %>
    <div class="well">
      <%= link_to t('list.button.edit'), edit_account_path(@user), :class => 'btn btn-primary' %>
    </div>
<% end %>

