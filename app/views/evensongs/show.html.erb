<h1><%= t('model.evensong.title') %></h1>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th><%= t('model.evensong.show.key') %></th>
    <th><%= t('model.evensong.show.val') %></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= t('model.evensong.field.title.title') %></td>
    <td><%= @evensong.title %></td>
  </tr>
  <tr>
    <td><%= t('model.evensong.field.psalm.title') %></td>
    <td><%= @evensong.psalm %></td>
  </tr>
  <tr>

    <td><%= t('model.composer.title') %></td>
    <td><%= @evensong.composer_name %></td>
  </tr>
  <tr>

    <td><%= t('model.genre.title') %></td>
    <td><%= @evensong.genre_name %></td>
  </tr>
  <tr>

    <td><%= t('model.evensong.field.soloists.title') %></td>
    <td><%= @evensong.soloists %></td>
  </tr>
  <tr>
    <td><%= t('model.evensong.field.comment.title') %></td>
    <td><%= @evensong.comment %></td>
  </tr>
  <tr>
    <td>
      <%= t('model.link.list.title') %>
    </td>
    <td>
      <% if permitted_to?(:show, :links) %>
          <% if @evensong.links %>
              <ul>
                <% @evensong.links.each do |link| %>
                    <li>
                      <%= link_to link.title, link.url %>
                      <% if permitted_to?(:edit, link) %>
                          <%= link_to t('show.button.edit'), edit_link_path(link), :class => 'btn btn-mini' %>
                      <% end %>
                      <% if permitted_to?(:destroy, link) %>
                          <%= link_to t('show.button.delete'), link_path(link), :method => 'delete', :confirm => t('show.delete.confirm'), :class => 'btn btn-mini btn-danger' %>
                      <% end %>
                    </li>
                <% end %>
              </ul>
          <% end %>
      <% end %>
    </td>
  </tr>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('show.button.back'), evensongs_path, :class => 'btn' %>
  <% if permitted_to?(:edit, @evensong) %>
      <%= link_to t('show.button.edit'), edit_evensong_path(@evensong), :class => 'btn' %>
  <% end %>
  <% if permitted_to?(:new, :links) %>
      <%= link_to t('show.button.link'), new_link_path(:evensong => @evensong.id), :class => 'btn' %>
  <% end %>
  <% if permitted_to?(:destroy, @evensong) %>
      <%= link_to t('show.button.delete'), evensong_path(@evensong), :method => 'delete', :confirm => t('show.delete.confirm'), :class => 'btn btn-danger' %>
  <% end %>
</div>
