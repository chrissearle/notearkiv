= form_for @genre, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= t('model.genre.title')

    %div.control-group
      = f.label :name, :class => 'control-label'
      %div.controls
        = f.text_field :name, :class => 'text_field'

    %div.form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('form.button.cancel'), genres_path, :class => 'btn'
