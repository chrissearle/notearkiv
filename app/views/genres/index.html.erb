<h1><%= t('model.genre.list.title') %></h1>
<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th><%= t('model.genre.list.name.title') %></th>
    <th><%= t('list.actions.title') %></th>
  </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <% if permitted_to? :edit, genre %>
              <%= link_to t('list.button.edit'), edit_genre_path(genre), :class => 'btn btn-mini' %>
          <% end %>
          <% if permitted_to? :destroy, genre %>
              <% if genre.deletable? %>
                  <%= link_to t('list.button.delete'), genre_path(genre), :method => 'delete', :confirm => t('list.delete.confirm'), :class => 'btn btn-mini btn-danger' %>
              <% end %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<% if permitted_to? :new, :genres %>
    <div class="well">
      <%= link_to t('list.button.new'), new_genre_path, :class => 'btn btn-primary' %>
    </div>
<% end %>