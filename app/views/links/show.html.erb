<h1>Link</h1>

<p>
  <b>Title</b><br>
  <%= @link.title %>
</p>

<p>
  <b>Url</b><br>
  <%= @link.url %>
</p>

<div class="form-actions">
  <%= link_to 'Back', links_path, :class => 'btn'  %>
  <%= link_to t("form.button.edit"), edit_link_path(@link), :class => 'btn' %>
  <%= link_to 'Delete', link_path(@link), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
