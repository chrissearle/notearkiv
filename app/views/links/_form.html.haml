.container
  .row
    .col-md-6
      %h2= t('page.link.title')

      = form_for item do |f|
        - if item.note
          = f.hidden_field :note_id, :value => item.note.id

        - if item.evensong
          = f.hidden_field :evensong_id, :value => item.evensong.id

        .form-group
          = f.label :title
          = f.text_field :title, :class => 'form-control'

        .form-group
          = f.label :url
          = f.text_field :url, :class => 'form-control'

        = f.submit t('button.update'), :class => 'btn btn-primary'
        = link_to t('button.cancel'), url_for( :controller => 'admin_users', :action => 'index'), :class => 'btn'
