- if @link.note
  %h2
    = t('model.note.title')
    %em= @link.note.title

- if @link.evensong
  %h2
    = t('model.evensong.title')
    %em= @link.evensong.title

= simple_form_for @link, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= t('model.link.title')

    - if @link.note
      = f.hidden_field :note_id, :value => @link.note.id

    - if @link.evensong
      = f.hidden_field :evensong_id, :value => @link.evensong.id

    = f.input :title
    = f.input :url

    %div.form-actions
      = f.button :submit, :class => 'btn-primary'
      = link_to t("form.button.cancel"), links_path, :class => 'btn'
