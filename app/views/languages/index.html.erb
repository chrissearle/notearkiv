<h1><%= t('model.language.list.title') %></h1>

<%= render :partial => 'actions' %>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th><%= t('model.language.list.name.title') %></th>
    <th><%= t('list.actions.title') %></th>
  </tr>
  </thead>
  <tbody>
  <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td>
          <% if permitted_to? :edit, language %>
              <%= link_to t('list.button.edit'), edit_language_path(language), :class => 'btn btn-mini' %>
          <% end %>
          <% if permitted_to? :destroy, language %>
              <% if language.deletable? %>
                  <%= link_to t('list.button.delete'), language_path(language), :method => 'delete', :confirm => t('list.delete.confirm'), :class => 'btn btn-mini btn-danger' %>
              <% end %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= render :partial => 'actions' %>